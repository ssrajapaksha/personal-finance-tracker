// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  seed    = "npx tsx prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id  // Remove @default(cuid()) to allow custom UUIDs from Supabase
  email     String   @unique
  name      String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  transactions   Transaction[]
  financialGoals FinancialGoal[]

  @@map("users")
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String   @default("#3B82F6")
  icon      String?
  createdAt DateTime @default(now()) @map("created_at")

  @@map("categories")
}

model Transaction {
  id          String   @id @default(cuid())
  userId     String   @map("user_id")
  amount     Decimal  @db.Decimal(10, 2)
  description String
  category   String
  type       TransactionType
  date       DateTime @db.Date
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

model FinancialGoal {
  id            String   @id @default(cuid())
  userId       String   @map("user_id")
  title        String
  targetAmount Decimal  @db.Decimal(10, 2) @map("target_amount")
  currentAmount Decimal @db.Decimal(10, 2) @default(0) @map("current_amount")
  targetDate   DateTime? @db.Date @map("target_date")
  status       GoalStatus @default(ACTIVE)
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("financial_goals")
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum GoalStatus {
  ACTIVE
  COMPLETED
  PAUSED
}
